{
  "name": "yag-env",
  "description": "Prepares the data defined via 'process.env' to be used in web applications or node packages",
  "version": "0.0.1",
  "license": "BSD-3-Clause",
  "author": {
    "name": "Yassel Avila Gil",
    "url": "http://yasselavila.com/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yasselavila/npm-env.git"
  },
  "main": "index.js",
  "jsnext:main": "esm/index.js",
  "es6:main": "esm/index.js",
  "typings": "index.d.ts",
  "devDependencies": {
    "npm-run-all": "^2.3.0",
    "typescript": "2.0.0-dev.20160706",
    "@types/node": "^6.0.31"
  },
  "scripts": {
    "start": "run-s build:w",
    "build": "run-s clean dist:data tsc",
    "build:w": "run-s clean dist:data tsc:w",
    "clean": "rm -rf dist && mkdir dist && cd dist && mkdir esm",
    "dist:data": "cp package.json dist/ && cp README.md dist/ && cp LICENSE.txt dist/",
    "tsc": "run-p tsc:es5 tsc:es6",
    "tsc:w": "run-p tsc:es5:w tsc:es6:w",
    "tsc:es5": "tsc --target es5 --module commonjs --outDir dist",
    "tsc:es5:w": "tsc -w --target es5 --module commonjs --outDir dist",
    "tsc:es6": "tsc --target es2015 --module es2015 --outDir dist/esm",
    "tsc:es6:w": "tsc -w --target es2015 --module es2015 --outDir dist/esm"
  }
}
